---
layout: null
---
<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom" xmlns:dc="http://purl.org/dc/elements/1.1/" xmlns:content="http://purl.org/rss/1.0/modules/content/">
  <channel>
    {% if site.title %}
    <title>{{ site.title | xml_escape }}</title>
    {% endif %}
    {% if site.rss-description %}
    <description>{{ site.rss-description | xml_escape }}</description>
    {% endif %}
    <link>{{ '/' | absolute_url }}</link>
    <atom:link href="{{ 'feed.xml' | absolute_url }}" rel="self" type="application/rss+xml" />
    <language>fr-FR</language>
    <managingEditor>{{ site.social-network-links.email }} ({{ site.author }})</managingEditor>
    <webMaster>{{ site.social-network-links.email }} ({{ site.author }})</webMaster>
    <lastBuildDate>{{ site.time | date_to_rfc822 }}</lastBuildDate>
    <generator>Jekyll v{{ jekyll.version }}</generator>
    <image>
      <url>{{ site.avatar | absolute_url }}</url>
      <title>{{ site.title | xml_escape }}</title>
      <link>{{ '/' | absolute_url }}</link>
    </image>
    
    {% assign excerpt_length = site.excerpt_length | default: 50 %}
    {% for post in site.posts limit:20 %}
      <item>
        <title>{{ post.title | strip_html | xml_escape }}</title>
        <description>
          {% if post.description %}
            {{ post.description | xml_escape }}
          {% elsif post.subtitle %}
            {{ post.subtitle | strip_html | xml_escape }}
          {% else %}
            {{ post.content | strip_html | xml_escape | truncatewords: excerpt_length }}
          {% endif %}
        </description>
        <content:encoded><![CDATA[{{ post.content }}]]></content:encoded>
        <pubDate>{{ post.date | date_to_rfc822 }}</pubDate>
        <link>{{ post.url | absolute_url }}</link>
        <guid isPermaLink="true">{{ post.url | absolute_url }}</guid>
        {% if post.author %}
        <dc:creator>{{ post.author | xml_escape }}</dc:creator>
        {% endif %}
        {% if post.tags and post.tags.size > 0 %}
          {% for tag in post.tags %}
          <category>{{ tag | xml_escape }}</category>
          {% endfor %}
        {% endif %}
        {% if post.cover-img or post.share-img %}
        <enclosure url="{{ post.cover-img | default: post.share-img | absolute_url }}" type="image/png" length="0" />
        {% endif %}
      </item>
    {% endfor %}
  </channel>
</rss>
